<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Common dimensions -->
    <dimen name="margin_normal">16dp</dimen>
    <dimen name="margin_small">8dp</dimen>
    <dimen name="margin_large">32dp</dimen>
    <dimen name="spacing_normal">8dp</dimen>
    <dimen name="spacing_micro">4dp</dimen>

    <dimen name="text_size_h1">22sp</dimen>
    <dimen name="text_size_h2">20sp</dimen>
    <dimen name="text_size_h3">18sp</dimen>

    <dimen name="a11y_min_touch_target">48dp</dimen>

    <dimen name="bottom_sheet_elevation">8dp</dimen>
    <dimen name="bottom_sheet_corner_radius">16dp</dimen>

    <!-- Maximum width of the content area (in percent) to use in single pane. -->
    <dimen name="content_max_width_percent">1.0</dimen>

    <!-- Dialogs -->
    <dimen name="dialog_corner_radius">8dp</dimen>
    <dimen name="dialogPreferredPadding">24dp</dimen>
    <dimen name="dialogPreferredPaddingLarge">36dp</dimen> <!-- dialogPreferredPadding + 12dp -->

    <!-- Snackbars -->
    <dimen name="snackbar_width">@dimen/match_parent</dimen>
    <dimen name="snackbar_margin_end_fab">0dp</dimen>
    <dimen name="snackbar_margin_bottom_fab">72dp</dimen>
    <dimen name="snackbar_margin_bottom_bab">84dp</dimen>


    <!-- per android.view.ViewGroup.LayoutParams -->
    <item name="match_parent" format="integer" type="dimen">-1</item>
    <item name="wrap_content" format="integer" type="dimen">-2</item>

    <!-- Firebase -->
    <dimen name="title_bottom_margin">16dp</dimen>
    <dimen name="button_horizontal_margin">8dp</dimen>

    <!-- Schedule -->
    <!-- The pane widths are made large enough so that we only show the panes side-by-side on very
         wide screens, e.g. tablet landscape (even in tablet portrait we cannot show both panes
         comfortably). When not shown side-by-side, the panes are made to fit the available width.
         Be careful not to make them so large that they do not fit anywhere.
    -->
    <dimen name="schedule_list_pane_width">400dp</dimen>
    <dimen name="schedule_detail_pane_width">600dp</dimen>
    <dimen name="schedule_bottom_sheet_peek_height">@dimen/a11y_min_touch_target</dimen>
    <dimen name="schedule_page_padding_bottom">56dp</dimen> <!-- bottom_sheet_peek_height + 8dp -->
    <dimen name="session_keyline">64dp</dimen>
    <dimen name="schedule_item_padding_vertical">8dp</dimen>

    <!-- Use dp because the time decoration has constrained width and we don't want it to grow if
         the user sets large text scale in the system settings.
    -->
    <dimen name="time_header_time_text_size">20dp</dimen>
    <dimen name="time_header_meridiem_text_size">14dp</dimen>

    <dimen name="day_header_text_size">@dimen/text_size_h3</dimen>
    <dimen name="day_header_decor_width">300dp</dimen>
    <dimen name="day_header_decor_height">72dp</dimen>
</resources>